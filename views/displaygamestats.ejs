    <div>
        <h1>Player's Game Statistics</h1>
    <% if(rs.length > 0) { %>
        <table border="3">
            <tr><th>Name</th><th>N.O.</th><th>Minutes</th><th>FG</th><th>3P</th>
                <th>Assists</th><th>Rebounds</th><th>Steals</th><th>Fouls</th>
                <th>Turnovers</th><th>Points</th><th>Edit Using N.O.</th><th><!-- delete --></th></tr>

            <% for (var i=0; rs.length > i; i++) { %>
                <tr>
                 <td><a href="/course/?courseid=<%= rs[i].Num %>"><%= rs[i].Name %><td><%= rs[i].Num %></td><td><%= rs[i].Minutes %>
                         </td><td><%= rs[i].FG %></td><td><%= rs[i].ThreeP %></td><td><%= rs[i].Assists %></td>
                         <td><%= rs[i].Rebounds %></td><td><%= rs[i].Steals %></td><td><%= rs[i].Fouls %></td>
                         <td><%= rs[i].Turnovers %></td><td><%= rs[i].Points %>
                         <td><a href="/course/updategame/?courseid=<%= rs[i].Num %>">Edit</td>
                         <td><a href="/course/deletegame/?courseid=<%= rs[i].Num %>">Delete</td></a></td>
                </tr>
            <% } %>
        </table>
    <% } else { %>
         No courses are entered into the Course database table.
    <% } %>
