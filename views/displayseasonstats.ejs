                 <td><a href="/course/?courseid=<%= rs[i].Num %>"><%= rs[i].Name %><td><%= rs[i].Num %></td><td><%= rs[i].MPG %>
                         </td><td><%= rs[i].FGP %></td><td><%= rs[i].ThreePP %></td><td><%= rs[i].APG %></td>
                         <td><%= rs[i].RPG %></td><td><%= rs[i].SPG %></td><td><%= rs[i].PPG %></td>
                         <td><a href="/course/updateseason/?courseid=<%= rs[i].Num %>">Edit</td>
                    <td><a href="/course/deleteseason/?courseid=<%= rs[i].Num %>">Delete</td></a></td>
                </tr>
            <% } %>
        </table>
    <% } else { %>
         No courses are entered into the Course database table.
    <% } %>
